<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker()
</script>

<input type="text" data-behaviour='datepicker' value="<%= Date.today.to_s %>">


<%= form_for(@hackathon) do |f| %>
  <% if @hackathon.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hackathon.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @hackathon.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%#= f.label :start %><br />
    <%#= f.datetime_select :start, :ampm => true, :minute_step => 15 %>
  </div>
  <div class="field">
    <%#= f.label :end %><br />
    <%#= f.datetime_select :end, :ampm => true, :minute_step => 15 %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.number_field :capacity %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :Upload_a_photo %><br />
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>