    </div>
  </div>

</section>

<div class="clearfix"></div>

<section>

  <div class="row-fluid">
  
    <% @hackathon.teams.each do |team| %>
      <div class="span4 team-content">
        <h4>
          <%= team.name %>
        </h4>

        <% unless @hackathon.teams.empty? %>
          <a href="/hackathons/<%=@hackathon.id%>/teammates/new" class ='btn'>Join Existing Team</a>
        <% end %>
      </div>
      <!-- for ever three team, put clearfix div -->

    <% end %>
  </div>

</section>
