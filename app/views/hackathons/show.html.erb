<section>
  <div class="row-fluid">
    <div class="span7 header-content">
      <%= image_tag @hackathon.image %>

      <%= pluralize(@hackathon.teams.size, 'team') %> signed-up:

    </div>
    <div class="span5 dummy-content">
      <%= image_tag 'map_placeholder.png', :style => 'overflow:hidden;' %>
    </div>
  </div>

  <div class="row-fluid">

    <div class="span8 subheader-content">
     
       <h3><%= @hackathon.name %></h3>
       <%= @hackathon.start %><br>
       <%= @hackathon.end %><br>
       <%= @hackathon.location %><br>
       <%= @hackathon.description %><br>
       <%= @hackathon.capacity %><br>
      
    </div>
    <div class="span4 subheader-content">
      <%= form_for(@participant) do |f| %>
        <%= f.hidden_field :hackathon_id, :value => params[:id] %>
        <%= f.submit "Create Team", class: 'btn' %>
      <% end %>
