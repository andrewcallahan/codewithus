
<div id="email-login" class="hide">
<%= form_tag sessions_path, :class => "form-horizontal" do |f| %>

    <div class="input-prepend">
      <div id="email_field">
        <span class="add-on">
          <i class="icon-user"></i>
        </span>
        <%= text_field_tag :email, "", :class => "input-large span10", :id=> "login_email", :placeholder => 'email here' %>
      </div>
      <span class="add-on">
        <i class="icon-lock"></i>
      </span>
      <%= password_field_tag :password, "", :class => "input-large span10", :id=> "login_password", :placeholder => 'password' %>
    </div>

  <div class="button-login">
    <button type="submit" class="btn btn-primary">
      <i class="icon-off icon-white"></i>
      Login
    </button>
  </div>
  <br>
  <a href="/auth/facebook">Sign in with Facebook</a>

  <div class="clearfix"></div>

<% end %>
</div>
